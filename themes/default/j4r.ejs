<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div style="background-color: #111319" class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">

           <div class="container mx-auto mt-1 text-center">
            <h2 class="title-page2">Join for Rewards</h2>
            <p class="text-gray">Join discord servers and get extra credits.</p>
           </div>
           
            <div class="row">
              <% for (let i = 0, len = settings.j4r.ads.length; i < len; i++) { %>
                <div class="col-md-6 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title"><%= settings.j4r.ads[i].name %></h4>
                      <p class="card-description"> Join this server to receive: <br> <%= settings.j4r.ads[i].coins %> Coins </p>
                      <form class="forms-sample">
                        <a role="button" class="btn btn-primary btn-lg" href="<%= settings.j4r.ads[i].invite %>" target="_blank">Join Server</a> <a class="btn btn-primary btn-lg" href="../login">Claim reward</a>
                      </form>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>
</html>
