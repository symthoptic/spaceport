<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div class="main-panel">
          <div style="background-color: #111319" class="content-wrapper">
          
            <div class="container mx-auto mt-1 text-center">
             <h2 class="title-page2">Redeem Coupon</h2>
             <p class="text-gray">Redeem a coupon.</p>
            </div>

            <!-- alert -->
            <% const alertClass = req.query.err === "SUCCESSCOUPONCODE" ? "alert-success" : "alert-danger"; %>
            <% if (req.query.err) { %>
              <div class="alert <%= alertClass %>">
                <% if (req.query.err === "MISSINGCOUPONCODE") { %>
                  You have not provided a coupon code.
                <% } else if (req.query.err === "INVALIDCOUPONCODE") { %>
                  Invalid coupon code. Was it claimed already?
                <% } else if (req.query.err === "SUCCESSCOUPONCODE") { %>
                  Success!
                <% } else { %>
                  Coupon failure.
                <% } %>
              </div>
            <% } %>
         
            <div class="row justify-content-center">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
		                <form action="/coupon_redeem">
                      <div class="form-group">
                        <label for="code">Code:</label>
                        <input style="border-radius: 15px; padding: 8px; margin-bottom: 10px;" type="text" class="form-control" placeholder="Enter your coupon code here" name="code">
                      </div>
                      <button class="btn btn-primary btn-lg">Redeem</button>
		                </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- inject:js -->
    <%- include('./components/scripts') %>
    <!-- endinject -->
  </body>
</html>
